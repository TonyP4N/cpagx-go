# CPAG Generator Enhanced Architecture Environment Variables
# Copy this file to .env and update the values according to your environment

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Redis Configuration
REDIS_URL=redis://:password123@redis:6379
REDIS_PASSWORD=password123
REDIS_DB=0

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=YOUR_INFLUXDB_TOKEN
INFLUXDB_ORG=cpagx
INFLUXDB_BUCKET=cpagx_data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=password123

# Application Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
LOG_LEVEL=INFO
ENVIRONMENT=production

# Celery Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000
CELERY_MAX_RETRIES=3

# Security Configuration
JWT_SECRET=YOUR_JWT_SECRET
CORS_ALLOWED_ORIGINS=*
API_RATE_LIMIT=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# File Storage Configuration
UPLOAD_MAX_SIZE=300MB
OUTPUT_DIR=outputs/v2
TEMP_DIR=/tmp/cpagx

# Database Retention Configuration
REDIS_TTL=3600
INFLUXDB_RETENTION_DAYS=30
NEO4J_CLEANUP_DAYS=7
